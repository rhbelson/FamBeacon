<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.altbeacon.beaconreference.SettingsActivity"
    android:background="#D8D8D8">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="NAME"
        android:id="@+id/textView5"
        android:layout_alignParentStart="true"
        android:textSize="15sp"
        android:textColor="#686868"
        android:layout_marginLeft="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:hint="Meaningful Name"
        android:id="@+id/meaningfulname"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:textColor="#888888"
        android:width="400dp"
        android:background="#ffffff"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:paddingLeft="2dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="UUID"
        android:id="@+id/textView7"
        android:layout_marginTop="17dp"
        android:textSize="15sp"
        android:textColor="#686868"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/meaningfulname"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:hint="16-Byte UUID"
        android:id="@+id/uuid16byte"
        android:textColor="#888888"
        android:width="400dp"
        android:background="#ffffff"
        android:textSize="18sp"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:paddingLeft="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Major"
        android:id="@+id/textView"
        android:layout_marginTop="17dp"
        android:textSize="15sp"
        android:textColor="#686868"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/uuid16byte"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:hint="16-Byte UUID"
        android:id="@+id/major"
        android:textColor="#888888"
        android:background="#ffffff"
        android:textSize="18sp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:text="Enter Major"
        android:paddingLeft="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Minor"
        android:id="@+id/textView2"
        android:textSize="15sp"
        android:textColor="#686868"
        android:layout_alignBottom="@+id/major"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView"
        android:layout_marginRight="165dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:hint="16-Byte UUID"
        android:id="@+id/minor"
        android:textColor="#888888"
        android:background="#ffffff"
        android:textSize="18sp"
        android:text="Enter Minor"
        android:layout_below="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="110dp"
        android:paddingLeft="2dp" />

</RelativeLayout>
