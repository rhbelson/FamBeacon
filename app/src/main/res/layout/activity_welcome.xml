<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.altbeacon.beaconreference.WelcomeActivity"
    android:background="#b23838">

    <TextView
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:id="@+id/textView7"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/welcomedescription"
        android:id="@+id/textView8"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="15dp"
        android:textStyle="italic"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView7"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Proximity solutions provided by Radius Networks, inc."
        android:id="@+id/textView9"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        android:layout_alignParentBottom="true" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageView"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/backpack_pic"
        android:background="#a3a3a3"
        android:layout_marginLeft="15dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Stay connected with your child"
        android:id="@+id/textView11"
        android:layout_alignBottom="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:paddingLeft="10dp"
        android:textStyle="bold|italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ensure the safety of your automobile"
        android:id="@+id/textView14"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:textStyle="bold|italic"
        android:layout_below="@+id/textView11"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginTop="42dp"
        android:paddingLeft="10dp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageView2"
        android:src="@drawable/safety"
        android:layout_alignBottom="@+id/textView14"
        android:layout_toStartOf="@+id/textView11" />



</RelativeLayout>
