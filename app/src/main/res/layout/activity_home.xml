<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.altbeacon.beaconreference.HomeActivity"
    android:background="#b23838">

    <TextView android:text="@string/mainscreeninfo" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:fontFamily="sans-serif-medium"
        android:layout_alignParentStart="true"
        android:textSize="15dp"
        android:id="@+id/home_default_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="A beacon has been spotted! If you have not yet configured your beacon, please do so by visiting the settings page."
        android:id="@+id/beacon_info"
        android:layout_below="@+id/home_default_text"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Your beacon has entered region. Would you like to monitor it?"
        android:id="@+id/beacon_entered"
        android:layout_below="@+id/home_default_text"
        android:layout_alignParentStart="true"
        android:layout_marginTop="54dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:visibility="invisible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes"
        android:id="@+id/enterregion_yes"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:visibility="invisible"
        android:layout_below="@+id/beacon_entered"
        android:layout_alignEnd="@+id/beacon_info"
        android:layout_marginEnd="74dp"
        android:layout_marginRight="90dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No"
        android:id="@+id/enterregion_no"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:visibility="invisible"
        android:layout_below="@+id/beacon_entered"
        android:layout_alignEnd="@+id/beacon_info"
        android:layout_marginEnd="74dp"
        android:layout_marginRight="15dp" />

</RelativeLayout>
